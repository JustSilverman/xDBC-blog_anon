<h1 class="page-title">Edit Post</h1>

<div class="post-form">
  <form action="/posts" method="post">
    <div class="field input-field"><input type="text" name="title" value="<%= @post.title %>"></div></br>
    <div class="textarea">
      <textarea class="input-textarea" rows="20" cols="50" name="body"><%= @post.body %></textarea>
    </div></br>
    <div class="field input-field"><input type="text" name="tags" value="<%= @post.tags_string %>"></div>
    </br>
    <input class="button" type="submit" value="Post">
  </form>
</div>

<form action="/posts" method="post">
  <input type="hidden" name="id" value="<%= @post.id %>">
  <input type="hidden" name="_method" value="DELETE">
  <input class="danger-button" type="submit" value="Delete post">
</form>
