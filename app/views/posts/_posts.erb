<div class="post-list">
  <h2>Latest Posts</h2>
  <h3 class="posts-category"><%= "#{post_category}" %></h3>
  <%= "Nothing posted yet. Create one below!" if posts.empty? %>
  <% posts.each do |post| %>
    <div class="post"><a class="post" href="<%= "/posts/#{post.id}" %>"><%= post.title.capitalize %></a> <%= erb :_tags, :locals => {:post => post} %></div>
  <% end %>
</div>